@model PhucMobileConnection.loaisanpham

@{
    ViewBag.Title = "Sửa Loại Sản Phẩm";
    ViewBag.activeLSP = "active";
    ViewBag.Tree1 = "Loại sản phẩm";
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <label class="control-label col-md-2">Tên Loại Sản Phẩm</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.TenLSP, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TenLSP, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Trở lại", "Index")
</div>
