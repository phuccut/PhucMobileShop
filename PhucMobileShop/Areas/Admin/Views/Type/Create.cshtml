@model PhucMobileConnection.loaisanpham

@{
    ViewBag.Title = "Thêm Loại Sản Phẩm";
    ViewBag.activeLSP = "active";
    ViewBag.Tree1 = "Loại Sản Phẩm";
}
<h2>Create</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class="control-label col-md-2">Tên Loại Sản Phẩm</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.TenLSP, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TenLSP, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Trở lại", "Index")
</div>
