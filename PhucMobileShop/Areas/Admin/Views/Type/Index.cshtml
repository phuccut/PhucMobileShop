@model IEnumerable<PhucMobileConnection.loaisanpham>
@{
    ViewBag.Title = "Quản lý loại sản phẩm";
    ViewBag.activeLSP = "active";
}
<div class="col-xs-12">
    <div class="box">
        <div class="box-header">
            <h3 class="box-title">Dữ liệu loại sản phẩm</h3><br><br>
            <!-- Button add -->
            <a href="@Url.Action("Create","Type")"<button type="button" class="btn btn-info">Thêm mới</button></a>
        </div><!-- /.box-header -->
        <div class="box-body">
            <table id="example1" class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th style="width: 300px">Mã loại sản phẩm</th>
                        <th style="width: 400px">Tên loại sản phẩm</th>
                        <th>Chức năng</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.MaLSP</td>
                            <td>@item.TenLSP</td>
                            <td>
                                <form method="post">
                                    <input type="hidden" name="id" value="@item.MaLSP">
                                    <input type="submit" class="btn" onclick="ConfirmXoa()" value="Xóa">
                                </form>
                                <button class="btn">
                                    @Ajax.ActionLink("Sửa", "Edit", new { id = item.MaLSP }, new AjaxOptions { HttpMethod = "POST" })
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
                <tfoot>
                    <tr>
                        <th>Mã loại sản phẩm</th>
                        <th>Tên loại sản phẩm</th>
                        <th>Chức năng</th>
                    </tr>
                </tfoot>
            </table>

        </div><!-- /.box-body -->
    </div><!-- /.box -->
</div><!-- /.col -->